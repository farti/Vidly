@using Vidly.Models
@model Vidly.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = Model.Title;

}
<head>
    <h2>@Model.Title</h2>

</head>



@using (Html.BeginForm("Save", "Movies"))
{
    @Html.ValidationSummary(true, "Please fix the following errors:")

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
        
    </div>   
    
    /*TODO: resolve datepicker problem with close */
    
    <div class="form-group" data-provide="datepicker">
        @Html.LabelFor((m => m.RelaseDate))
        @Html.TextBoxFor(m => m.RelaseDate, "{0:dd MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.RelaseDate)
        
    </div>

    <div class="form-group" data-provide="datepicker">
        @Html.LabelFor((m => m.DateAdded))
        @Html.TextBoxFor(m => m.DateAdded, "{0:dd MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DateAdded)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.GenreId)
        @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.Generes, "Id", "Name"), "Select Genre Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GenreId)
    </div>
    <div class="form-group">
        @Html.LabelFor((m => m.NumberInStock))
        @Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NumberInStock)
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">
        Save
    </button>
}


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('.datepicker').datepicker({
            format: "0:d MMM yyyy",
            todayBtn: true,
            orientation: "auto right"
        });
    </script>
    

}


