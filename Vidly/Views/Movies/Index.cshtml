@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Films</h2>

<table>
    <thead>
    <th>Title</th>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(movie.Name,"Details","Movies", new {id= movie.Id}, null)
            </td>
        </tr>
    }
    </tbody>
</table>
